<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tyorikan.voicerecordingvisualizer.VisualizerView
            android:id="@+id/visualizer3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@android:color/darker_gray"
            app:numColumns="100"
            app:renderColor="@color/purple_200"
            app:renderRange="both"
            app:renderType="pixel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1.6"
            android:text="Input level: "
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v1"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v2"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v3"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v4"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>
            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v5"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v6"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v7"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v8"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v9"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>

            <View
                android:layout_width="10dp"
                android:background="@drawable/greyshape"
                android:layout_weight="1"
                android:id="@+id/v10"
                android:layout_margin="5dp"
                android:layout_height="15dp"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>